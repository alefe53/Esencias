<!DOCTYPE html>
<html lang="es">

<head>
    <%# Corregir la ruta para que sea relativa al directorio 'views' %>
    <%- include('partials/_head_lanzamientos', { pageTitle: typeof pageTitle !== 'undefined' ? pageTitle : "Mis Lanzamientos" }) %>
</head>

<body>
    <%# Corregir la ruta para que sea relativa al directorio 'views' %>
    <%- include('partials/_page_top_lanzamientos') %>

    <div class="container">
        <% if (typeof lanzamientos !== 'undefined' && Array.isArray(lanzamientos) && lanzamientos.length > 0) { %>
            <% lanzamientos.forEach(function(album) { %>
                <%# Corregir la ruta para que sea relativa al directorio 'views' %>
                <%- include('partials/_album_item', { album: album }) %>
            <% }); %>
        <% } else { %>
            <p>No hay lanzamientos disponibles en este momento.</p>
        <% } %>
    </div>

    <%# Corregir la ruta para que sea relativa al directorio 'views' %>
    <%- include('partials/_image_modal_lanzamientos') %>

    <%# Enlazar el nuevo archivo JavaScript externo %>
    <script src="/js/musicadf_detail_logic.js"></script>
</body>
</html>
